  "compilerOptions": {
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",

    "target": "ES2017",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "exclude": ["src/generate/*.ts"],
  "include": ["src/index.ts"]
}
